<Page
    x:Class="NoDI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NoDI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ToDoItemTemplate" x:DataType="local:ToDoItemViewModel">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="Completed" IsChecked="{x:Bind Completed}"/>
                <TextBlock x:Name="Title" Text="{x:Bind Title}" Width="100" HorizontalAlignment="Left" />
                <TextBlock x:Name="Due" Text="{x:Bind Due}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView ItemTemplate="{StaticResource ToDoItemTemplate}" ItemsSource="{x:Bind ViewModel.ToDoItems}"/>
    </Grid>
</Page>
